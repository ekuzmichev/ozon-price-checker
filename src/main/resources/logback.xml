<configuration debug="true">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %highlight(%-5level) %cyan(%logger{15}) -%kvp -%msg %n</pattern>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} | %highlight(%-5level) | %msg | %cyan(%logger{40}) | %kvp %n</pattern>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>